<h1>Captured Biodata</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>First Name</th>
     <th>Last Name</th>
    <th>Date of Birth</th>
     <th>About</th>
     <th colspan="2"></th>
  </tr>
 
  <% @biodata.each do |biodata| %>
    <tr>
      <td><%= biodata.title %></td>
      <td><%= biodata.first_name %></td>
      <td><%= biodata.last_name %></td>
      <td><%= biodata.date_of_birth %></td>
      <td><%= biodata.about %></td>
      <td><%= link_to 'Show', biodata_path(@biodata) %></td>
      <td><%= link_to 'Edit', biodata_path(@biodata) %></td>
      <td><%= link_to 'Delete', biodata_path(@biodata),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
<% end %>
</table>

<%= link_to 'Home', controller: 'biodata' %>

